{% extends 'base.html.twig' %}
{% block content %}

<style>
    ul {
        list-style-type: none;
    }
</style>
<div>
    <h1>Doctors:</h1>
    <hr>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for medecin in medecins %}
            <tr>
                <td><a href="{{ path('medecin_show', { 'id': medecin.id }) }}">{{ medecin.id }}</a></td>
                <td>{{ medecin.libelle }}</td>
                <td>{{ medecin.code }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('medecin_show', { 'id': medecin.id }) }}">Details</a>

                            <a href="{{ path('medecin_edit', { 'id': medecin.id }) }}">Edit</a>

                            <a href="{{ path('medecin_delete', { 'id': medecin.id }) }}">Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

        <a  href="{{ path('medecin_new') }}">Create Doctor</a>

    
    {% endblock content %}